Host *.elb.amazonaws.com
        StrictHostKeyChecking false

Host 172.16.*
  ProxyCommand ssh -W %h:%p bastion-xxxxxxxxxx.us-east-1.elb.amazonaws.com
  User ubuntu
  IdentityFile ~/.ssh/id_rsa
  PreferredAuthentications publickey

Host bastion-xxxxxxxxxx.us-east-1.elb.amazonaws.com
  User ubuntu 
  Hostname bastion-xxxxxxxxxx.us-east-1.elb.amazonaws.com
  IdentityFile ~/.ssh/id_rsa
  ControlMaster auto
  ControlPath ~/.ssh/ansible-bastion
  ControlPersist 5m
  PreferredAuthentications publickey
